<html>
  <body>
    <header>
      <%= image_tag('') %>
    </header>
    <div class="main-contents">
      <%= form_with(model: @posts, local: true) do |form| %>
        <% if @murmur.errors.any? %>
          <div id="error_explanation">
            <h2><%= @posts.errors.count %>error has occcurred</h2>
            <ul>
              <% @posts.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="posts_title" %>
          <%= form.text_field :content %>
        </div>
        <%= form.submit("Tweet")%>
        <br><%= link_to "Check the pots lists", posts_path %>
      <% end %>
    </div>
    <footer class="footer">
      <p>Copyright Â© 2021 L.Takahashi INC All RIGHTS RESERVED.</p>
    </footer>
  </body>
</html>